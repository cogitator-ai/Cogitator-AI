{
  "name": "@cogitator/core",
  "version": "0.1.0",
  "description": "Core runtime for Cogitator AI agents",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@cogitator/types": "workspace:*",
    "@cogitator/memory": "workspace:*",
    "@cogitator/models": "workspace:*",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.4",
    "openai": "^4.24.0",
    "@anthropic-ai/sdk": "^0.39.0",
    "nanoid": "^5.0.4"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "@cogitator/sandbox": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@cogitator/sandbox": {
      "optional": true
    }
  },
  "license": "MIT"
}
